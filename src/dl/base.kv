#:import utils kivy.utils

<BaseWidget>:
   size: 50, 50
   GridLayout:
      cols: 1
      size: root.width, root.height
      Label:
         text: 'Remindme~app'
         background_normal: ''
         background_color: (2/255, 77/255, 17/255, 1) 
         size_hint_y: None 
         height: '30dp' 
         canvas.before:
            Color:
               rgba: self.background_color
            Rectangle:
               size: self.size 
               pos: self.pos 
         # text properties
         color: (1,1,1,1)
         bold: True 
         italic: True 
         outline_color: (0,0,1)
         outline_width: 10
         font_size: 30
      TabLayout:
